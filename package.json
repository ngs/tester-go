{
  "name": "tester-go",
  "description": "A tester package for the Go language that uses `go test` to display test coverage.",
  "keywords": [
    "go",
    "golang",
    "test",
    "tester",
    "coverage"
  ],
  "main": "./lib/main",
  "version": "1.0.6",
  "repository": "https://github.com/joefitzgerald/tester-go",
  "license": "Apache-2.0",
  "engines": {
    "atom": ">=1.5.3 <2.0.0"
  },
  "author": "Joe Fitzgerald <jfitzgerald@pivotal.io> (http://github.com/joefitzgerald)",
  "homepage": "https://atom.io/packages/tester-go",
  "bugs": {
    "url": "https://github.com/joefitzgerald/tester-go/issues"
  },
  "dependencies": {
    "atom-package-deps": "4.2.0",
    "lodash": "^4.16.2",
    "temp": "^0.8.3",
    "rimraf": "^2.5.4"
  },
  "devDependencies": {
    "standard": "^8.2.0",
    "fs-plus": "^2.9.2"
  },
  "package-deps": [
    "go-config",
    "go-get",
    "linter"
  ],
  "consumedServices": {
    "go-config": {
      "versions": {
        "1.0.0": "consumeGoconfig"
      }
    },
    "go-get": {
      "versions": {
        "1.0.0": "consumeGoget"
      }
    }
  },
  "configSchema": {
    "runCoverageOnSave": {
      "title": "Run Coverage Tool On Save",
      "description": "Run `go test -coverprofile` each time a file is saved",
      "type": "boolean",
      "default": false,
      "order": 1
    },
    "runCoverageWithShortFlag": {
      "title": "Run Coverage With Short Flag Set",
      "description": "Runs `go test` with `-short` flag set",
      "type": "boolean",
      "default": true,
      "order": 2
    }
  },
  "standard": {
    "globals": [
      "atom",
      "waitsForPromise"
    ]
  }
}
